{% extends 'base.html.twig' %}

{% block title %}Admin Panel{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin/dashboard.css') }}">
{% endblock %}

{% block body %}
    <div class="container-admin">
        <div class="admin-header-row">
            <div>
                <div class="admin-title">üëë Admin Panel</div>
                <div class="admin-badge">
                    Administrator Access ‚Äì You have full control to manage users, roles, and accounts.
                </div>
            </div>
        </div>

        <div class="alerts">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
        </div>

        {# example stats ‚Äì replace counts with real values from controller #}
        <div class="cards-row">
            <div class="stat-card">
                <div>
                    <div class="stat-title">Total Users</div>
                    <div class="stat-value">{{ users|length }}</div>
                </div>
                <div class="stat-icon">üë§</div>
            </div>
            <div class="stat-card">
                <div>
                    <div class="stat-title">Moderators</div>
                    <div class="stat-value">{{ moderatorsCount ?? 0 }}</div>
                </div>
                <div class="stat-icon">üõ°Ô∏è</div>
            </div>
            <div class="stat-card">
                <div>
                    <div class="stat-title">Admins</div>
                    <div class="stat-value">{{ adminsCount ?? 0 }}</div>
                </div>
                <div class="stat-icon">üëë</div>
            </div>
        </div>

        <div class="section-title">User Management</div>
        <div class="admin-card">
            <table class="data-table">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Role</th>
                    <th style="width:220px;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    {% set role = user.roles[0] ?? 'ROLE_USER' %}
                    <tr>
                        <td>
                            <div class="user-cell">
                                <div class="user-avatar">üë§</div>
                                <div>{{ user.email }}</div>
                            </div>
                        </td>
                        <td>
                            {% if role == 'ROLE_ADMIN' %}
                                <span class="role-badge role-admin">Admin</span>
                            {% elseif role == 'ROLE_MODERATOR' %}
                                <span class="role-badge role-moderator">Moderator</span>
                            {% else %}
                                <span class="role-badge role-user">User</span>
                            {% endif %}
                        </td>
                        <td>
                            <form method="POST" action="{{ path('admin_dashboard') }}" style="display:flex; gap:8px; align-items:center;">
                                <input type="hidden" name="user_id" value="{{ user.id }}">
                                <input type="hidden" name="update_role" value="1">

                                <select name="role" class="form-select">
                                    <option value="admin" {{ role == 'ROLE_ADMIN' ? 'selected' }}>Admin</option>
                                    <option value="moderator" {{ role == 'ROLE_MODERATOR' ? 'selected' }}>Moderator</option>
                                    <option value="user" {{ role == 'ROLE_USER' ? 'selected' }}>User</option>
                                </select>

                                <button class="btn-action">Save</button>

                                <a href="{{ path('admin_dashboard', { delete: user.id }) }}"
                                   onclick="return confirm('Are you sure you want to delete this user?');">
                                    <button type="button" class="btn-delete">Delete </button>
                                </a>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
