{% extends 'base.html.twig' %}

{% block title %}Browse Adverts{% endblock %}

{% block stylesheets %}
    <style>
        /* Container */

        .advert-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 24px;
        }

        /* Header */
        h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 32px;
        }

        /* Advert Card */
        .advert-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            padding: 24px;
            border: 1px solid #e2e8f0;
            margin-bottom: 32px;
            cursor: pointer;
        }

        .advert-image {
            width: 100%;
            height: 160px;
            border-radius: 12px;
            background: linear-gradient(to right, #e0c3fc, #fbc2eb);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            margin-bottom: 16px;
        }

        .advert-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .advert-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .advert-location {
            color: #718096;
            font-size: 0.875rem;
            margin-bottom: 8px;
        }

        .advert-category {
            display: inline-block;
            font-size: 0.75rem;
            color: #5a67d8;
            background-color: #ebf4ff;
            padding: 4px 12px;
            border-radius: 9999px;
        }

        .advert-price {
            font-size: 1.25rem;
            font-weight: bold;
            color: #5a67d8;
            text-align: right;
        }

        .advert-seller {
            font-size: 0.875rem;
            color: #718096;
            margin-top: 8px;
            text-align: right;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 40px;
        }

        .pagination a {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
        }

        .pagination a.active {
            background-color: #5a67d8;
            color: #fff;
        }

        .pagination a.inactive {
            background-color: #e2e8f0;
            color: #718096;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="">

        <!-- Header -->
        <h1>Browse Adverts</h1>

        <!-- Advert List -->
        <div class="advert-list">
            {% for advert in adverts %}
                <a href="{{ path('app_advert_view', { id: advert.id }) }}" class="advert-card" style="text-decoration: none; color: inherit;">
                    <div class="advert-image">
                        üì∑
                    </div>

                    <div class="advert-content">
                        <div>
                            <h2 class="advert-title">{{ advert.title }}</h2>
                            <p class="advert-location">üìç {{ advert.location }}</p>
                            <span class="advert-category">{{ advert.category }}</span>
                        </div>

                        <div>
                            <p class="advert-price">¬£{{ advert.price }}</p>
                            <p class="advert-seller">{{ advert.user.email }}</p>
                        </div>
                    </div>
                </a>
            {% else %}
                <p>No adverts found.</p>
            {% endfor %}
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <a href="#" class="active">1</a>
            <a href="#" class="inactive">2</a>
            <a href="#" class="inactive">3</a>
        </div>

    </div>
{% endblock %}
