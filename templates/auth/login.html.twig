{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: #f7f7fb;
            font-family: system-ui, sans-serif;
        }

        .login-container {
            max-width: 420px;
            margin: 80px auto;
            background: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            text-align: center;
        }

        .login-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 28px;
        }

        .form-label {
            display: block;
            text-align: left;
            font-size: 0.9rem;
            margin-bottom: 6px;
            color: #333;
        }

        .form-input {
            width: 100%;
            padding: 14px;
            margin-bottom: 20px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 1rem;
            background: #fafafa;
        }

        .form-input:focus {
            outline: none;
            border-color: #5a51ff;
            box-shadow: 0 0 0 3px rgba(90, 81, 255, 0.2);
        }

        .login-btn {
            width: 100%;
            background: #5a51ff;
            color: #fff;
            padding: 14px;
            border-radius: 8px;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            margin-top: 10px;
        }

        .login-btn:hover {
            background: #473df5;
        }

        .login-footer {
            margin-top: 18px;
            font-size: 0.9rem;
            color: #555;
        }

        .login-footer a {
            color: #5a51ff;
            text-decoration: none;
        }

        .error-msg {
            background: #ffe5e5;
            color: #b30000;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="login-container">

        <h1 class="login-title">Login</h1>

        {% if error %}
            <div class="error-msg">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">

            <label class="form-label">Email</label>
            <input
                type="email"
                name="email"
                class="form-input"
                value="{{ last_email }}"
                required
            >

            <label class="form-label">Password</label>
            <input
                type="password"
                name="password"
                class="form-input"
                required
            >

            <button type="submit" class="login-btn">Login</button>
        </form>

        <p class="login-footer">
            Don't have an account?
            <a href="{{ path('app_register') }}">Register</a>
        </p>

    </div>

{% endblock %}
